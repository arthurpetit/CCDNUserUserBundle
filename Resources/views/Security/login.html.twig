{% extends param('ccdn_user_user.security.login.layout_template') %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}{{- 'title.login'|trans({}, 'CCDNUserUserBundle') -}}{% endblock %}

{% block sidebar %}
	{{ parent() }}

	{%- include 'CCDNUserUserBundle:Sidebar:sidebar.html.twig' -%}

{% endblock %}

{% block body %}

	{%- spaceless -%}

	{%- for key, message in app.session.getFlashes() -%}
	<div class="bg_flash_message">
		<div class="flash_{{- key -}}">
		    {{- message | trans({}, 'FOSUserBundle') -}}
		</div>
	</div>
	{%- endfor -%}

	<h2>{{- 'layout.login'|trans({}, 'FOSUserBundle') -}}</h2>

	{%- if error -%}
	<ul class="alert alert-error"><li>{{- error -}}</li></ul>
	{%- endif -%}

	<form action="{{- path("fos_user_security_check") -}}" method="post" class="form-horizontal">
		<fieldset>

			<div class="control-group">
				<label class="control-label" for="username">{{- 'security.login.username'|trans({}, 'FOSUserBundle') -}}</label>
				<div class="controls row-fluid">
					<input class="input-xlarge span8" type="text" id="username" name="_username" value="{{- last_username -}}">
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="password">{{- 'security.login.password'|trans({}, 'FOSUserBundle') -}}</label>
				<div class="controls row-fluid">
					<input class="input-xlarge span8" type="password" id="password" name="_password">
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="remember_me">{{- 'security.login.remember_me'|trans({}, 'FOSUserBundle') -}}</label>
				<div class="controls row-fluid">
					<input type="checkbox" id="remember_me" name="_remember_me" value="on">
				</div>
			</div>

			<div class="form-actions">
				<input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{- 'security.login.submit'|trans({}, 'FOSUserBundle') -}}">
				&nbsp;&#124;&nbsp;<a href="{{- path('fos_user_resetting_request') -}}">{{- 'link.password.reset' |trans({}, 'CCDNUserUserBundle') -}}</a>
				{%- if param('ccdn_user_user.security.login.support_facebook') -%}
                          <br><br>{%- include 'CCDNUserUserBundle:Security:facebookButton.html.twig' -%}
				{%- endif -%}
			</div>

		</fieldset>
	</form>

	{%- endspaceless -%}

{% endblock body %}
